<header>
    <div class="container">
      <div class="d-flex justify-content-between align-items-center">
        <%= link_to "Wikinimous", articles_path, class: "logo" %>
        <%= link_to "New Article", new_article_path, class: "btn btn-primary" %>
      </div>
    </div>
</header>
<main>
  <div class="container">
  <div class="d-flex flex-column align-items-center mt-4">
    <div class="card" style="width: 100%; max-width: 800px;">
      <div class="card-body">
        <h2 class="card-title text-center border-bottom pb-2 mb-3">
          <%= @article.title %>
        </h2>
        <p class="card-text py-2 m-0"><%= simple_format(@article.content) %></p>
      </div>
    </div>
  </div>
</div>
</main>
