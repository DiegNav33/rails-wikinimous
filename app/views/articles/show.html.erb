<%= render 'shared/header' %>
<main>
  <div class="container">
  <div class="d-flex flex-column align-items-center mb-5" id="containerForElements">
    <%=link_to articles_path, id: "backButton" do%>
          <i class="fa-solid fa-circle-chevron-left"></i>
    <%end%>
    <% flash.each do |key, message| %>
      <div class="alert alert-<%= key %> mt-2 flash-message" style="width:80%; max-width: 800px; text-align:center">
        <%= message %>
      </div>
    <% end %>
    <div class="d-flex align-items-center justify-content-end mt-5"  id="buttons" style="width: 100%; max-width: 800px;">
      <%=link_to edit_article_path(@article), class: "mx-3" do%>
        <i class="fa-solid fa-pen-to-square"></i>
      <%end%>
      <%=link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Delete #{@article.title}?"} do%>
        <i class="fa-solid fa-trash-can"></i>
      <%end%>
    </div>
    <div class="card" style="width: 100%; max-width: 800px;">
      <div class="card-body">
        <h2 class="card-title text-center border-bottom pb-2 mb-3">
          <%= @article.title %>
        </h2>
        <p class="card-text py-2 m-0"><%= simple_format(@article.content) %></p>
      </div>
    </div>
  </div>
</div>
</main>
