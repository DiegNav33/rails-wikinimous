<div class="col-md-8">
  <%= form_with model: article, class: 'form-horizontal' do |f| %>
    <div class="form-group">
      <%= f.label :title, class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= f.label :content, class: 'form-label' %>
      <%= f.text_area :content, rows: 10, class: 'form-control', required: true %>
    </div>
    <div class="form-group d-flex flex-column align-items-start">
      <%= f.submit class: 'btn btn-success btn-lg' %>
      <% unless f.object.new_record? %>
        <%= link_to "Cancel", article_path(@article), class: "btn btn-primary mt-2" %>
      <% else %>
        <%= link_to "Cancel", articles_path, class: "btn btn-primary mt-2" %>
      <% end %>
    </div>
  <% end %>
</div>
